<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <title>@ViewData["Title"] - Cheburek999</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css"/>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true"/>
    <link rel="stylesheet" href="~/Cheburek999.styles.css" asp-append-version="true"/>
</head>
<body>
<header style="background-color: #ffc107;">
    <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar box-shadow mb-3" style="background-color: #ffc107">
        <div class="container-fluid" style="background-color: #ffc107">
            <a class="navbar-brand btn btn-outline-dark" asp-controller="Home" asp-action="Index">Cheburek999</a>
            <a class="navbar-brand btn btn-outline-success" href="http://10.44.2.76:5000">Live Chat</a>
            <a class="navbar-brand btn btn-outline-dark" asp-controller="Notebook" asp-action="Index">All Notebooks</a>
        </div>
    </nav>
</header>
<br>
<div class="container">
    <main role="main" class="pb-3">
        @RenderBody()
    </main>
</div>

<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<script src="~/js/site.js" asp-append-version="true"></script>
@await RenderSectionAsync("Scripts", required: false)
</body>
</html>